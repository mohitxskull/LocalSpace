{
  "name": "@localspace/node-lib",
  "description": "",
  "version": "0.0.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./exception": "./build/src/exceptions/index.js",
    "./transformer": "./build/src/transformer/index.js",
    "./column/*": "./build/src/columns/*.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "pnpm run lint",
    "test": "c8 pnpm run quick:test",
    "prebuild": "pnpm run lint && pnpm run clean",
    "build": "tsc"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.0.1",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/node": "24.3.3",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.34.0",
    "np": "^10.0.6",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "typescript": "5.9.2",
    "@types/luxon": "^3.7.1"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.18.0",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/cache": "^1.3.0",
    "luxon": "^3.7.1",
    "@vinejs/vine": "^3.0.1"
  },
  "dependencies": {
    "@localspace/lib": "workspace:*",
    "zod": "^4.1.5"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
